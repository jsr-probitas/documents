{
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  },
  "tasks": {
    "dev": "deno run --allow-net --allow-read --watch main.ts",
    "start": "deno run --allow-net --allow-read main.ts",
    "check": "deno check main.ts templates/*.tsx data/sample_codes.ts data/clients.ts data/features.ts tests/*.ts",
    "verify": "deno fmt && deno lint && deno task check",
    "test": "deno test --allow-net --allow-read"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1",
    "hono": "jsr:@hono/hono@^4",
    "probitas": "jsr:@probitas/probitas@^0"
  },
  "exclude": [
    "data/samples/*.probitas.ts"
  ],
  "lint": {
    "exclude": [
      "data/samples/*.probitas.ts"
    ]
  },
  "fmt": {
    "exclude": [
      "data/samples/*.probitas.ts"
    ]
  }
}
